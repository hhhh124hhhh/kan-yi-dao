# 《是男人就砍一刀》环境变量配置模板
# 复制此文件为 .env 并填入实际配置值

# =============================================================================
# 游戏基础配置
# =============================================================================

# 游戏运行模式 (development, production, testing)
GAME_MODE=development

# 屏幕配置
SCREEN_WIDTH=800
SCREEN_HEIGHT=600
FPS=60
FULLSCREEN=false
VSYNC=true

# 调试模式
DEBUG=false
SHOW_FPS=false
ENABLE_LOGGING=true

# =============================================================================
# AI配置
# =============================================================================

# 默认AI类型 (rule_based, llm_ai, deepseek_ai)
DEFAULT_AI_TYPE=rule_based

# AI降级机制 (当主要AI不可用时是否降级到规则AI)
ENABLE_AI_FALLBACK=true

# AI评论冷却时间（秒）
AI_COMMENT_COOLDOWN=2.0

# =============================================================================
# DeepSeek API配置
# =============================================================================

# DeepSeek API密钥 (从 https://platform.deepseek.com/ 获取)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# DeepSeek API基础URL
DEEPSEEK_BASE_URL=https://api.deepseek.com

# DeepSeek模型选择 (deepseek-chat, deepseek-coder)
DEEPSEEK_MODEL=deepseek-chat

# DeepSeek API参数
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_MAX_TOKENS=150
DEEPSEEK_TIMEOUT=10

# DeepSeek请求限制（每分钟请求数）
DEEPSEEK_RATE_LIMIT=60

# =============================================================================
# 其他LLM API配置（可选）
# =============================================================================

# 智谱AI配置 (当前默认LLM)
ZHIPU_API_KEY=your_zhipu_api_key_here
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/anthropic
ZHIPU_MODEL=claude-3-haiku-20240307

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# 音频配置
# =============================================================================

# 音频系统开关
ENABLE_AUDIO=true

# 音频设备 (0=默认设备)
AUDIO_DEVICE_INDEX=0

# 音频音量 (0.0-1.0)
AUDIO_VOLUME=0.7

# 音效开关
ENABLE_SOUND_EFFECTS=true

# =============================================================================
# 数据存储配置
# =============================================================================

# 存档文件路径
SAVE_FILE_PATH=savegame.json

# 自动存档间隔（秒）
AUTO_SAVE_INTERVAL=300

# 存档备份保留数量
MAX_SAVE_BACKUPS=5

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/game.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# 性能配置
# =============================================================================

# 特效质量 (low, medium, high, ultra)
EFFECTS_QUALITY=high

# 粒子数量限制
MAX_PARTICLES=1000

# 内存使用限制（MB）
MAX_MEMORY_USAGE=512

# =============================================================================
# 网络配置
# =============================================================================

# 网络请求超时时间（秒）
NETWORK_TIMEOUT=10

# 最大重试次数
MAX_RETRIES=3

# 代理配置（可选）
HTTP_PROXY=
HTTPS_PROXY=

# =============================================================================
# 安全配置
# =============================================================================

# 存档加密密钥（可选，留空则不加密）
SAVE_ENCRYPTION_KEY=

# API请求签名密钥（可选）
API_SIGNATURE_KEY=

# =============================================================================
# 开发和调试配置
# =============================================================================

# 开发者模式
DEV_MODE=false

# 性能监控
ENABLE_PROFILING=false

# 内存监控
ENABLE_MEMORY_PROFILING=false

# 测试模式（使用Mock数据）
TEST_MODE=false

# Mock AI响应（测试用）
MOCK_AI_RESPONSES=true

# =============================================================================
# 实验性功能
# =============================================================================

# 多语言支持 (zh-cn, en-us)
LANGUAGE=zh-cn

# 主题设置 (dark, light)
THEME=dark

# AI学习功能
ENABLE_AI_LEARNING=true

# 高级AI功能
ENABLE_ADVANCED_AI=false

# =============================================================================
# 第三方服务配置（可选）
# =============================================================================

# 错误追踪服务
SENTRY_DSN=

# 分析服务
ANALYTICS_API_KEY=

# 更新检查服务
UPDATE_CHECK_URL=

# =============================================================================
# 自定义配置
# =============================================================================

# 游戏平衡参数（可覆盖config.py中的默认值）
CUSTOM_ATTACK_POWER_MULTIPLIER=1.0
CUSTOM_EXPERIENCE_MULTIPLIER=1.0
CUSTOM_CRIT_RATE_MULTIPLIER=1.0

# 自定义AI人格设置
CUSTOM_AI_PERSONALITY=enthusiastic_coach

# 自定义游戏规则
CUSTOM_MAX_LEVEL=100
CUSTOM_START_COINS=0